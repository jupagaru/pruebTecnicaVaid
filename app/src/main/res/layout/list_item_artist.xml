<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="10dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue"
        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp">

        <ImageView
            android:id="@+id/idImg"
            android:layout_width="47dp"
            android:layout_height="53dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            tools:srcCompat="@android:drawable/btn_star_big_off" />

        <TextView
            android:id="@+id/tvTxtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_default"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvTxtName"
            android:text="@string/edit_default"
            android:textColor="@color/colorOrange"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTxtListeners"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_below="@+id/tvTxtName"
            android:text="@string/listeners"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvListeners"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTxtName"
            android:layout_toRightOf="@+id/tvTxtListeners"
            android:text="@string/edit_default"
            android:textColor="@color/colorOrange"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTxtUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_below="@+id/tvTxtListeners"
            android:text="@string/url"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTxtListeners"
            android:layout_toRightOf="@+id/tvTxtUrl"
            android:text="@string/edit_default"
            android:textColor="@android:color/holo_orange_dark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTxtStreamable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_below="@+id/tvUrl"
            android:text="@string/streamable"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvStreamable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvUrl"
            android:layout_toRightOf="@+id/tvTxtStreamable"
            android:text="@string/edit_default"
            android:textColor="@color/colorOrange"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>